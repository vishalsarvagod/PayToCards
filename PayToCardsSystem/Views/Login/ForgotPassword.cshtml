
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>::VistaMoney::</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

</head>
<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div style="margin-top:20px;">
                <img src="~/Images/VMLogo-transparent.png" />
            </div>
            <p>Forgot Password</p>
            <form class="m-t" role="form" action="#">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="EmailId" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Reset</button>

                <a href="@Url.Action("Index", "Login")"><small>Login Now?</small></a>

            </form>
            <p class="m-t"> <small>&copy; Vista Money 2017. All rights reserved.</small> </p>
        </div>
    </div>

</body>
</html>
